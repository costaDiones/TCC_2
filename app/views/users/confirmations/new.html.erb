<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div id="topo" class="row topo">

    <a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i></a>
    <nav id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle"><i class="fechar fa fa-times"></i></a>
        <li class="sidebar-brand">
          <a href="/"  onclick = $("#menu-close").click(); >Página Inicial</a>
        </li>

        <li>
          <a href="/novousuario"  >Novo Usuario</a>
        </li>
        <li>
          <a ><%= link_to "Esqueceu a Senha", new_password_path(resource_name) %></a>
        </li>
        <li>
          <a   ><%= link_to "Reenviar instruções de confirmação ?", new_confirmation_path(resource_name) %></a>
        </li>
        <li>
          <a href="/login" onclick = $("#menu-close").click(); >Contato</a>
        </li>

      </ul>
    </nav>
  </div>

  <header id="top" class="header ">

    <ul id="cbp-bislideshow" class="cbp-bislideshow">

      <li><img src="/assets/agua2.jpg" alt="image02"/>
      </li>
      <li><img src="/assets/agua13.JPG" alt="image03"/>
      </li>
      <li><img src="/assets/agua_7.jpg" alt="image04"/>
      </li>
      <li><img src="/assets/agua11.jpg" alt="image04"/>
      </li>

    </ul>

    <div class="text-vertical-center col-xs-12 ">
      <h1>CAOSC</h1>
      <h3>Companhia de Água do Oeste de Santa Catarina</h3>
      <br>
    </div>

    <div class="container">
      <div class="login1 col-md-4 col-md-offset-4 " id="login">
        <h2>Reenviar Confirmação</h2>

        <form action="#">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'email'%>
          </div>



          <button type="submit" class="botaoEntra btn btn-primary">
            Reenviar
          </button>
        </form>

      </div>

    </div>

  </header>
  <% end -%>
